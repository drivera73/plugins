<model>
    <mount>//OPNsense/openconnect/general</mount>
    <description>Openconnect configuration</description>
    <version>1.0.1</version>
    <items>
        <enabled type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </enabled>
        <server type="TextField">
            <default>server</default>
            <Required>Y</Required>
            <mask>/\S*/</mask>
            <ValidationMessage>Please provide IP or hostname (no spaces allowed).</ValidationMessage>
        </server>
        <user type="TextField">
            <default>user</default>
            <Required>Y</Required>
            <mask>/^[a-zA-Z0-9.\@_-]{1,32}$/</mask>
            <ValidationMessage>Please provide a valid username. Allowed characters are a-zA-Z0-9._-@ and it has to be 1-32 characters long.</ValidationMessage>
        </user>
        <password type="TextField">
            <default>password</default>
            <Required>Y</Required>
        </password>
        <servercert type="TextField">
            <Required>N</Required>
            <mask>/^[a-z0-9]{40,64}$/</mask>
            <ValidationMessage>Please provide a valid hash.</ValidationMessage>
        </servercert>
        <hash type="OptionField">
            <default>sha256</default>
            <multiple>N</multiple>
            <Required>Y</Required>
                <OptionValues>
                    <sha256>SHA256</sha256>
                    <sha1>SHA1</sha1>
                </OptionValues>
        </hash>
        <compression type="OptionField">
            <default>stateless</default>
            <multiple>N</multiple>
            <Required>N</Required>
                <OptionValues>
                    <none>NONE</none>
                    <stateless>STATELESS</stateless>
                    <all>ALL</all>
                </OptionValues>
        </compression>
        <authgroup type="TextField">
            <Required>N</Required>
            <mask>/^[a-zA-Z0-9]{1,64}$/</mask>
            <ValidationMessage>Only a-zA-Z0-9 are allowed.</ValidationMessage>
        </authgroup>
        <usergroup type="TextField">
            <Required>N</Required>
            <mask>/^[a-zA-Z0-9]{1,64}$/</mask>
            <ValidationMessage>Only a-zA-Z0-9 are allowed.</ValidationMessage>
        </usergroup>
        <clientcertificate type="CertificateField">
            <Type>cert</Type>
            <Required>N</Required>
        </clientcertificate>
        <passtos type="BooleanField">
            <default>0</default>
            <Required>N</Required>
        </passtos>
        <pfs type="BooleanField">
            <default>0</default>
            <Required>N</Required>
        </pfs>
        <reconnecttime type="AutoNumberField">
			<MinimumValue>1</MinimumValue>
			<MaximumValue>900</MaximumValue>
            <default>300</default>
            <Required>N</Required>
            <ValidationMessage>Please enter a number between 1 and 900</ValidationMessage>
        </reconnecttime>
    </items>
</model>
